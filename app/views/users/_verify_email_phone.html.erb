                                <%= link_to "send code", "/users/send_verification_token",class:'btn btn-success' %>
                            </div>
                        </div><br>
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-3">
                            <label>Enter code here</label>
                            </div>
                            <div class="col-3">
                                <input type="number" class="form-control">
                            </div>
                            <div class="col-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>