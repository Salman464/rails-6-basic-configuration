<div class="">
    <h3>Please provide these document</h3>
    <div class="m-5">   
        
        <div class='row'>
            <div class="col-sm-12 col-md-2 p-2">
                <%= f.label :profile_picture,'Profile picture' %><br>
            </div>
            <div class="col-sm-12 col-md-6 p-2">
                <%= f.file_field :profile_picture, class:'form-control' %>
